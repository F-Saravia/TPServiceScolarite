@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Liste des Parcours</h1>

<p>
    <a asp-action="Create" class="btn btn-info">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
        </svg>
        Créer un nouveau parcours
    </a>
</p>

<div class=class container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="class col-sm-6 col-md-4 ">
                <div class="class card carde1 shadow-sm ">
                    <img class="card-img-top mb-3" src="/photoLogoParcour/@item.Logo" width="100px" height="300px" alt="">
                    <div class="card-body">
                        <h6> <span class="text-danger p-2 "> <b>Nom:</b>  </span>   @Html.DisplayFor(modelItem => item.Nom)</h6>
                        <h6><span class="text-danger  p-2"> <b>Résumé:</b>  </span> @Html.DisplayFor(modelItem => item.Resume)</h6>
                        <h6> <span class="text-danger  p-2"> <b>Infos:</b> </span>  @Html.DisplayFor(modelItem => item.Infos)</h6>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info fw-bold">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-card-list" viewBox="0 0 16 16">
